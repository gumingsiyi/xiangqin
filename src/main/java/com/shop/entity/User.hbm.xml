<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.shop.entity.User" table="user" schema="shop">
        <id name="id">
            <column name="id" sql-type="varchar(15)" length="15"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="int(11)"/>
        </property>
        <property name="age">
            <column name="age" sql-type="int(11)"/>
        </property>
        <property name="birth">
            <column name="birth" sql-type="date"/>
        </property>
        <property name="edu">
            <column name="edu" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="character">
            <column name="character" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="workplace">
            <column name="workplace" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="job">
            <column name="job" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="income">
            <column name="income" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="requirement">
            <column name="requirement" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="intro">
            <column name="intro" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="photo">
            <column name="photo" sql-type="int(11)" not-null="true" default="0"/>
        </property>
    </class>
</hibernate-mapping>